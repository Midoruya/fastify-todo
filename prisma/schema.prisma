// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int                   @id @default(autoincrement())
  name       String                @unique @db.VarChar(120)
  password   String                @db.VarChar(125)
  dashboards LinkUserToDashboard[]
}

model Dashboard {
  id          Int                   @id @default(autoincrement())
  name        String                @db.VarChar(120)
  description String?               @db.VarChar(255)
  users       LinkUserToDashboard[]
}

model LinkUserToDashboard {
  user        User      @relation(fields: [userId], references: [id])
  userId      Int // relation scalar field (used in the `@relation` attribute above)
  dashboard   Dashboard @relation(fields: [dashboardId], references: [id])
  dashboardId Int // relation scalar field (used in the `@relation` attribute above)

  @@id([userId, dashboardId])
}
